@model IEnumerable<LandParcelFinder.Models.Parcel>

@{
    ViewData["Title"] = "Land Parcels";
}

<div class = "container mt-4">
    <div class = "row mb-3">
        <div class = "col">
            <h1>Land Parcels</h1>
        </div>
        <div class="col text-end">
            <a asp-action="Create" class="btn btn-primary">
                Add New Panel
            </a>
        </div>
    </div>
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thread class = "table-dark">
                <tr>
                    <th>Parcel #</th>
                    <th>Address</th>
                    <th>County</th>
                    <th>Size (Acres)</th>
                    <th>Price</th>
                    <th>HasWetLands</th>
                    <th>Status</th>
                    <th>Details</th>
                </tr>
            </thread>
            <tbody>
                @foreach(var item in Model)
                {
                    <tr>
                        <td>@item.ParcelNumber</td>
                        <td>@item.Address</td>
                        <td>@item.county</td>
                        <td>@item.SizeInAcres</td>
                        <td>@item.Price</td>
                        <td>@item.HasWetLands</td>
                        <td>
                            @if(item.Status == "Available")
                            {
                                <span class= "badge bg-success">@item.Status</span>
                            }
                            else if(item.Status == "Pending")
                            {
                                <span class= "badge bg-warning text-dark">@item.Status</span>
                            }
                            else
                            {
                                <span class= "badge bg-secondary">@item.Status</span>
                            }
                        </td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.ParcelId" class="btn btn-sm btn-info">Details</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}